   "version": "0.2.0",
   "configurations": [
      {
         "name": "Launch Deno",
         "request": "launch",
         "type": "pwa-node",
         "program": "${workspaceFolder}/src/quarto.ts",
         "args": [""],
         "cwd": "${workspaceFolder}/sandbox",
         "runtimeExecutable": "deno",
         "runtimeArgs": [
            "run",
            "--unstable", 
            "--importmap=${workspaceFolder}/src/import_map.json",
            "--inspect-brk",
            "--allow-all"
         ],
         "attachSimplePort": 9229
      }
   ]
}