  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/src/quarto.ts",
      "args": ["render", "visibility.md"],
      "cwd": "${workspaceFolder}/sandbox/docs",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--importmap=${workspaceFolder}/src/import_map.json",
        "--inspect-brk",
        "--allow-all"
      ],
      "env": {
        "QUARTO_RESOURCES": "${workspaceFolder}/src/resources",
        "CONDA_PREFIX": "${env:HOME}/Library/r-miniconda/envs/quarto-cli"
      },
      "attachSimplePort": 9229
    }
  ]
}
